#!/usr/bin/make -f

# Start build by executing:
# $ debuild --no-tgz-check -us -uc

# Uncomment this line out to make installation process more chatty.
# Keep it on until we know there's no outstanding problems with installation.
# export DH_VERBOSE=1

DESTDIR=$(CURDIR)/debian/cuttlefish-common

# Clear LD_PRELOAD to prevent libfakeroot from affecting bazel info output.
BAZEL=LD_PRELOAD= bazel
BAZEL_BIN=$(shell $(BAZEL) info bazel-bin)
BAZEL_SRC=$(shell $(BAZEL) info workspace)

BINDIR=$(DESTDIR)/usr/bin
CFBINDIR=$(DESTDIR)/usr/lib/cuttlefish-common/bin
CFDATDIR=$(DESTDIR)/usr/share/cuttlefish-common
CFDOCDIR=$(DESTDIR)/usr/share/doc/cuttlefish-common

build:
	dh $@
	@$(BAZEL) test //...:all
	@$(BAZEL) build //host/ivserver
	@$(BAZEL) build //host/launcher
	@$(BAZEL) build //guest:gce_ramdisk

binary:
	@dh_testroot
	@dh_prep
	@dh_installdirs
	# Install IVServer
	@cp $(BAZEL_BIN)/host/ivserver/ivserver $(CFBINDIR)
	@cp $(BAZEL_SRC)/host/ivserver/README.md $(CFDOCDIR)/ivserver.md
	@cp $(BAZEL_SRC)/host/ivserver/vsoc_mem.json $(CFDATDIR)
	# Install Launcher
	@cp $(BAZEL_BIN)/host/launcher/launcher $(CFBINDIR)
	@cp $(BAZEL_SRC)/host/launcher/README.md $(CFDOCDIR)/launcher.md
	@cp $(BAZEL_SRC)/host/launcher/network-abr0.xml $(CFDATDIR)
	# Install shared ramdisk
	@cp $(BAZEL_BIN)/guest/gce_ramdisk.img $(CFDATDIR)
	dh $@

%:
	dh $@
